<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <IncludeContentInPack>true</IncludeContentInPack>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <PackageId>CrestApps.OrchardCore.AgentSkills</PackageId>
    <Version>1.0.0</Version>
    <Authors>CrestApps</Authors>
    <Description>Distributes shared AI agent guardrail and instruction files for Orchard Core development. Files are copied into the consuming project's .agents/ folder on install and update â€” no runtime dependency.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/CrestApps/CrestApps.OrchardCore.AgentSkills</PackageProjectUrl>
    <RepositoryUrl>https://github.com/CrestApps/CrestApps.OrchardCore.AgentSkills</RepositoryUrl>
    <PackageTags>orchard-core;agent-skills;ai;agentskills;cms;dev-tools</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <DevelopmentDependency>true</DevelopmentDependency>
    <NoWarn>NU5128</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <Content Include=".agents\skills\**\*"
             Pack="true"
             PackagePath="contentFiles\any\any\.agents\skills"
             BuildAction="Content"
             CopyToOutputDirectory="Never" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
    <None Include="build\**\*" Pack="true" PackagePath="build" />
  </ItemGroup>

</Project>
